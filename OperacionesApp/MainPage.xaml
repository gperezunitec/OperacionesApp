<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.MainPage">

                <ContentPage Title="Area del cuadrado">
                    <StackLayout Margin="10">
                        <Label Text="Ingrese el valor del lado del cuadrado: " Margin="10"></Label>
                        <Entry Text="{Binding ladoCuadrado}" Keyboard="Numeric" Margin="10"></Entry>
                        <Button Text="Calcular" Background="Green" Command="{Binding CalcularCommand}" Margin="10"></Button>
                        <Button Text="Limpiar" Background="Red" Command="{Binding LimpiarCommand}" Margin="10"></Button>
                    </StackLayout>
                </ContentPage>

                <ContentPage Title="Area del círculo">
                    <StackLayout Margin="10">
                        <Label Text="Ingrese el valor del radio del circulo: " Margin="10"></Label>
                        <Entry Text="" Keyboard="Numeric" Margin="10"></Entry>
                        <Button Text="Calcular" Background="Green" Command="{Binding CalcularCommand}" Margin="10"></Button>
                        <Button Text="Limpiar" Background="Red" Command="{Binding LimpiarCommand}" Margin="10"></Button>
                    </StackLayout>
                 </ContentPage>

                <ContentPage Title="Area del rectángulo">

                    <StackLayout Margin="10">
                        <Label Text="Ingrese el valor del la base del rectangulo: " Margin="10"></Label>
                        <Entry Text="" Keyboard="Numeric" Margin="10"></Entry>
                        <Label Text="Ingrese el valor del la altura del rectangulo: " Margin="10"></Label>
                        <Entry Text="" Keyboard="Numeric" Margin="10"></Entry>
                        <Button Text="Calcular" Background="Green" Command="{Binding CalcularCommand}" Margin="10"></Button>
                        <Button Text="Limpiar" Background="Red" Command="{Binding LimpiarCommand}" Margin="10"></Button>
                    </StackLayout>

                </ContentPage>

</TabbedPage>
